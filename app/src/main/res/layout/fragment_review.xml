<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/result_icon_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@android:drawable/ic_dialog_info"/>
    <TextView
        android:id="@+id/result_name_review"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/result_icon_review"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Title" />
    <TextView
        android:id="@+id/id_review"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/result_name_review"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Id"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/result_second_line_review"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/result_name_review"
        android:layout_toRightOf="@id/result_icon_review"
        android:ellipsize="marquee"
        android:singleLine="false"
        android:text="Second line"
        tools:text='Again, please remember to remove your API key before you submit through GitHub. Be sure to review it thoroughly before you submit. All criteria must "meet specifications" in order to pass.' />
</RelativeLayout>
